@model IEnumerable<CMeShop.Models.StavkaKosarice>

@{
    ViewBag.Title = "Narudžbe za isporuku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Spisak neisporučenih narudžbi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Naziv proizvoda
        </th>
        <th>
            Količina
        </th>
        <th>
            Adresa Kupca
        </th>
        <th>
            Ime i prezime kupca
        </th>
        <th>
            Način plaćanja
        </th>
        <th>
            Datum i vrijeme kupovine
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.artikal.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kolicina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imeKupca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nacinPlacanja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumKreiranja)
        </td>
        <td>
            @Html.ActionLink("Označi isporučeno", "Edit", new { id=item.ID }) |
        </td>
    </tr>
}

</table>
